.header__icon--menu[aria-expanded=true]:before { opacity:0; }
/* 
#menu-drawer, #menu-drawer *{ background:transparent!important; } */

.menu-drawer{background: rgba(255, 255, 255, .40)!important;

box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
backdrop-filter: blur(12.6px);
-webkit-backdrop-filter: blur(12.6px);
border: 1px solid rgba(255, 255, 255, 0.3);}

@media screen and (min-width: 750px){
.menu-drawer {
    width: 50%!important;
}}


h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6 { 
	font-family: 'abc_walter_neueextrafett';
 }


.menu-drawer__menu-item {
    padding: 1.1rem 3rem;
    text-decoration: none;
    color: var(--Purple, #5930D2);
 font-family: 'abc_walter_neueextrafett';

font-size: 4.8rem!important;
font-style: normal;
font-weight: 900;
line-height: 0%; /* 0px */
text-transform: uppercase;
padding-top: 4px!important;
padding-bottom: 4px!important;
}

.menu-drawer__menu-item--active, .menu-drawer__menu-item:focus, .menu-drawer__close-button:focus, .menu-drawer__menu-item:hover, .menu-drawer__close-button:hover{
	background:transparent!important;
}

.grwn-menu-area {
  
    width: auto;
	text-decoration:none;
 
}


.grwn-menu-area .h1{
font-size: 32px;

font-weight: 900;
line-height: normal; 
}

#close{
	
	position: absolute;
    right: 60px;
    top: 60px;
	z-index: 9;
}

#menu-drawer{ top:0; } 

.menu-drawer__inner-container .menu-drawer__navigation {
   

	    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 8.1rem 8.2rem;


}

.js .menu-drawer {
    height: calc(100vh)!important;
}

.bottom-menu ul {
	margin:0; padding:0;
	list-style:none;
}

.bottom-menu ul li{
	font-size: 24px;
font-style: normal;
font-weight: 400;
line-height: normal;
 margin: 18px 0;
}

.bottom-menu ul li a{color: #000; text-decoration:none; font-family: 'abc_diatype_semi-monobold'; }

.social-icon{
	top:34px; display:flex!important;
}


.social-icon a{ margin-right: 16px;}

.menu-drawer__menu li a{ padding-left:0!important; padding-right:0!important;}

